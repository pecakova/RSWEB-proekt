@model Music.ViewModels.AlbumGenresCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Album</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Album.Title" class="control-label"></label>
                <input asp-for="Album.Title" class="form-control" />
                <span asp-validation-for="Album.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album.YearPublished" class="control-label"></label>
                <input asp-for="Album.YearPublished" class="form-control" />
                <span asp-validation-for="Album.YearPublished" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album.NumSongs" class="control-label"></label>
                <input asp-for="Album.NumSongs" class="form-control" />
                <span asp-validation-for="Album.NumSongs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album.Playlist" class="control-label"></label>
                <input asp-for="Album.Playlist" class="form-control" />
                <span asp-validation-for="Album.Playlist" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FrontPageFile" class="control-label"></label>
                <input asp-for="FrontPageFile" class="form-control" />
                <span asp-validation-for="FrontPageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album.ArtistId" class="control-label"></label>
                <select asp-for="Album.ArtistId" class="form-control" asp-items="ViewBag.ArtistId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary custom-btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn" style="border-color: darkgoldenrod"><i class="fa-solid fa-arrow-left"></i>Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
